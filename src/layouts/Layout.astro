---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

const navItems = [
  { name: 'Home', path: '/' },
  { name: 'Products', path: '/products' },
  { name: 'Blog', path: '/blog'},
  { name: 'About', path: '/about' },
  { name: 'Contact', path: '/contact' },
  { name: 'Cart', path: '/cart' }
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Premium products for your lifestyle" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white">
    <header class="fixed w-full z-50 bg-white/90 backdrop-blur-md border-b border-gray-200">
      <nav class="max-w-7xl mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="text-xl font-semibold">NR</a>
          <div class="hidden md:flex space-x-8">
            {navItems.map((item) => (
              <a 
                href={item.path}
                class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-50 border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <div>
            <h2 class="text-xl font-semibold mb-4">NR</h2>
            <p class="text-gray-600 text-sm">Premium products for your lifestyle.</p>
          </div>
          
          <div>
            <h3 class="text-sm font-semibold text-gray-900 mb-3">Shop</h3>
            <ul class="space-y-2">
              <li><a href="/products/electronics" class="text-gray-600 hover:text-gray-900 text-sm">Electronics</a></li>
              <li><a href="/products/fashion" class="text-gray-600 hover:text-gray-900 text-sm">Fashion</a></li>
              <li><a href="/products/home" class="text-gray-600 hover:text-gray-900 text-sm">Home</a></li>
              <li><a href="/products/lifestyle" class="text-gray-600 hover:text-gray-900 text-sm">Lifestyle</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-sm font-semibold text-gray-900 mb-3">Company</h3>
            <ul class="space-y-2">
              <li><a href="/about" class="text-gray-600 hover:text-gray-900 text-sm">About Us</a></li>
              <li><a href="/contact" class="text-gray-600 hover:text-gray-900 text-sm">Contact</a></li>
              <li><a href="/faq" class="text-gray-600 hover:text-gray-900 text-sm">FAQ</a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-200 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-sm text-gray-500">
              Copyright Â© {new Date().getFullYear()} NR Store. All rights reserved.
            </p>
            <div class="flex gap-6 mt-4 md:mt-0">
              <a href="/privacy" class="text-gray-600 hover:text-gray-900 text-sm">Privacy Policy</a>
              <a href="/terms" class="text-gray-600 hover:text-gray-900 text-sm">Terms of Service</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
