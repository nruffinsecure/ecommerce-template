<!-- src/layouts/Layout.astro -->
---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white">
    <header class="fixed w-full z-50 bg-white/90 backdrop-blur-md border-b border-gray-200">
      <nav class="max-w-7xl mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="text-xl font-semibold">NR</a>
          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-sm text-gray-600 hover:text-gray-900">Home</a>
            <a href="/products" class="text-sm text-gray-600 hover:text-gray-900">Products</a>
            <a href="/about" class="text-sm text-gray-600 hover:text-gray-900">About</a>
            <a href="/contact" class="text-sm text-gray-600 hover:text-gray-900">Contact</a>
            <a href="/cart" class="text-sm text-gray-600 hover:text-gray-900">Cart</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-gray-50 py-12 mt-20">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <p class="text-sm text-gray-500">
          Copyright Â© {new Date().getFullYear()} NR Store. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
