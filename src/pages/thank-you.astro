---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Thank You | Store">
  <div class="max-w-4xl mx-auto px-4 py-16 text-center">
    <h1 class="text-5xl font-bold mb-8">Thank You!</h1>
    <p class="text-xl text-gray-600 mb-12">
      We have received your message and will get back to you soon.
    </p>
    <div class="space-x-4">
      <a 
        href="/" 
        class="inline-block bg-black text-white px-8 py-3 rounded-full hover:bg-gray-800 transition-colors"
      >
        Back to Home
      </a>
      <a 
        href="/products" 
        class="inline-block bg-white text-black px-8 py-3 rounded-full border border-black hover:bg-gray-100 transition-colors"
      >
        View Products
      </a>
    </div>
  </div>
</Layout>
