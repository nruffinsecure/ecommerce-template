<!-- src/pages/contact.astro -->
---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact | Store">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-5xl font-bold text-center mb-16 gradient-text">Contact Us</h1>
    <form class="space-y-6 max-w-xl mx-auto">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
        <input 
          type="text" 
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-apple-blue focus:border-transparent"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
        <input 
          type="email" 
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-apple-blue focus:border-transparent"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
        <textarea 
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-apple-blue focus:border-transparent"
          rows="6"
        ></textarea>
      </div>
      <button 
        type="submit"
        class="w-full bg-apple-blue text-white py-3 rounded-full hover:bg-blue-700 transition-colors"
      >
        Send Message
      </button>
    </form>
  </div>
</Layout>
