<!-- src/pages/products.astro -->
---
import Layout from '../layouts/Layout.astro';

interface Product {
  id: number;
  title: string;
  price: number;
  image: string;
  description: string;
}

const response = await fetch('https://fakestoreapi.com/products');
const products = await response.json() as Product[];
---
<Layout title="Products | Store">
  <div class="max-w-7xl mx-auto px-4 py-16">
    <h1 class="text-5xl font-bold text-center mb-16 gradient-text">Our Products</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      {products.map((product) => (
        <div class="group">
          <div class="relative aspect-square overflow-hidden rounded-2xl bg-[#fafafa]">
            <img 
              src={product.image} 
              alt={product.title}
              class="object-contain w-full h-full transform transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <div class="mt-6">
            <h3 class="text-xl font-semibold mb-2 truncate">{product.title}</h3>
            <p class="text-lg text-gray-800">${product.price}</p>
            <button class="mt-4 w-full bg-apple-blue text-white py-3 rounded-full hover:bg-blue-700 transition-colors">
              Add to Cart
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
