<!-- src/components/Footer.astro -->
---
const currentYear = new Date().getFullYear();

const footerLinks = {
  shop: [
    { name: "Electronics", href: "/electronics" },
    { name: "Fashion", href: "/fashion" },
    { name: "Home", href: "/home" },
    { name: "Lifestyle", href: "/lifestyle" }
  ],
  company: [
    { name: "About Us", href: "/about" },
    { name: "Contact", href: "/contact" },
    { name: "FAQ", href: "/faq" }
  ]
};
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <div>
        <h2 class="text-xl font-semibold mb-4">NR</h2>
        <p class="text-gray-600 text-sm">Premium products for your lifestyle.</p>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-900 mb-3">Shop</h3>
        <ul class="space-y-2">
          {footerLinks.shop.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-gray-900 text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-900 mb-3">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-gray-900 text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-200 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-600 text-sm">Â© {currentYear} NR Store. All rights reserved.</p>
        <div class="flex gap-6 mt-4 md:mt-0">
          <a href="/privacy" class="text-gray-600 hover:text-gray-900 text-sm">Privacy Policy</a>
          <a href="/terms" class="text-gray-600 hover:text-gray-900 text-sm">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
